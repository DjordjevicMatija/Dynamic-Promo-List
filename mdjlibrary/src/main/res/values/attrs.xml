<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="DynamicPromoList">
        <attr name="itemLayoutOrientation" format="enum">
            <enum name="horizontal" value="0" />
            <enum name="vertical" value="1" />
        </attr>
        <attr name="titlePosition" format="enum">
            <enum name="titleBelow" value="0" />
            <enum name="titleInvisible" value="1" />
            <enum name="titleInside" value="2" />
        </attr>
        <attr name="circularList" format="boolean" />
        <attr name="borderColor" format="color" />
        <attr name="titleSize" format="dimension" />
        <attr name="titleColor" format="color" />
        <attr name="titleFont" format="reference" />
        <attr name="posterWidth" format="dimension" />
        <attr name="posterHeight" format="dimension" />
        <attr name="playerWidth" format="dimension" />
        <attr name="playerHeight" format="dimension" />
        <attr name="displayOverview" format="boolean" />
        <attr name="sideTitleSize" format="dimension" />
        <attr name="sideTitleColor" format="color" />
        <attr name="sideTitleFont" format="reference" />
        <attr name="overviewSize" format="dimension" />
        <attr name="overviewColor" format="color" />
        <attr name="overviewFont" format="reference" />
    </declare-styleable>
</resources>